/*======================================================================
    MIXINS & EXTENDS
======================================================================*/
@import "~stylus-media-queries"
@import "~stylus-easing"
@import "~stylus-reset"
@import "~brindille-stylus-extends"

@import "./config/*.styl"

/*======================================================================
    BASE
======================================================================*/
reset()

html
  @extend .full-size
  background black
  color white
  overflow-x hidden
  overflow-y scroll

body,
section
  @extend .full-size-relative

#symbols
  display none

a
  text-decoration none

/*======================================================================
    COMPONENTS
======================================================================*/
@import "../views/**/*.styl"
