{
  "name": "brindille",
  "version": "1.0.0",
  "description": "Javascript front-end project boilerplate, twig + stylus + browserify + babel",
  "main": "src/index.js",
  "scripts": {
    "start": "node_modules/brindille-cli/bin/brindille watch babelify aliasify yamlify",
    "build": "brindille build babelify aliasify yamlify",
    "lint": "standard --verbose | snazzy",
    "svg": "svg-sprite -w 1024 -h 1024 --svg-xmldecl false --svg-doctype false -s --symbol-dest ./src/views --symbol-dimensions true --ss icons.svg --symbol-bust false public/assets/images/icons/*.svg"
  },
  "aliasify": {
    "aliases": {
      "lib": "./src/lib/",
      "config": "./src/config/",
      "views": "./src/views/",
      "data": "./data/"
    }
  },
  "author": "Hellohikimori",
  "license": "MIT",
  "standard": {
    "ignore": [
      "/public"
    ],
    "globals": [
      "Image",
      "Audio",
      "TweenLite",
      "TweenMax",
      "TimelineLite",
      "TimelineMax",
      "Expo",
      "Cubic",
      "Quad",
      "Back",
      "Power0",
      "Circ",
      "Quint",
      "Bounce",
      "Linear",
      "Elastic",
      "RoughEase",
      "YT",
      "PIXI",
      "THREE"
    ]
  },
  "devDependencies": {
    "aliasify": "*",
    "babel-preset-env": "^1.6.0",
    "babelify": "*",
    "brindille-cli": "brindille/brindille-cli#without-linter",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "prettier": "1.14.3",
    "snazzy": "^6.0.0",
    "standard": "^9.0.2",
    "svg-sprite": "*",
    "webpack": "^4.20.2",
    "yamlify": "*"
  },
  "dependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "brindille-component": "*",
    "brindille-interactive-component": "*",
    "brindille-preloader": "*",
    "brindille-resize": "*",
    "brindille-scroll": "*",
    "brindille-stylus-extends": "*",
    "component-emitter": "^1.2.1",
    "dom-classes": "*",
    "dom-event": "*",
    "emitter-component": "*",
    "gsap": "*",
    "page": "*",
    "stylus-easing": "*",
    "stylus-font-face": "*",
    "stylus-media-queries": "*",
    "stylus-reset": "*",
    "whatwg-fetch": "^2.0.3",
    "winston": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/brindille/brindille.git"
  },
  "homepage": "https://github.com/brindille/brindille",
  "bugs": {
    "url": "https://github.com/brindille/brindille/issues"
  }
}
