{
  "name": "brindille",
  "version": "1.0.0",
  "description": "Javascript front-end project boilerplate, twig + stylus + browserify + babel",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run js:dev & npm run css:dev",
    "build": "npm run js:prod && npm run css:prod",
    "js:dev": "watchify -v -d -t babelify -t aliasify -t yamlify ./src/index.js -o public/build/build.js",
    "js:prod": "browserify -d -d ./src/index.js --t babelify -t aliasify -t yamlify | uglifyjs -nm > public/build/build.js",
    "css:dev": "stylus -u autoprefixer-stylus -u ./node_modules/stylus-font-face --with {limit:80000} -w ./src/stylus/main.styl -o public/build --sourcemap",
    "css:prod": "stylus -u autoprefixer-stylus -u ./node_modules/stylus-font-face --with {limit:80000} ./src/stylus/main.styl -o public/build --compress",
    "lint": "standard --verbose | snazzy",
    "svg": "svg-sprite -w 1024 -h 1024 --svg-xmldecl false --svg-doctype false -s --symbol-dest ./src/views --symbol-dimensions true --ss icons.svg --symbol-bust false public/assets/images/icons/*.svg"
  },
  "aliasify": {
    "aliases": {
      "lib": "./src/lib/",
      "config": "./src/config/",
      "views": "./src/views/",
      "data": "./data/"
    }
  },
  "author": "Hellohikimori",
  "license": "MIT",
  "standard": {
    "ignore": [
      "/public"
    ],
    "globals": [
      "Image",
      "Audio",
      "TweenLite",
      "TweenMax",
      "TimelineLite",
      "TimelineMax",
      "Expo",
      "Cubic",
      "Quad",
      "Back",
      "Power0",
      "Circ",
      "Quint",
      "Bounce",
      "Linear",
      "Elastic",
      "RoughEase",
      "YT",
      "PIXI",
      "THREE"
    ]
  },
  "devDependencies": {
    "aliasify": "*",
    "autoprefixer-stylus": "*",
    "babel-preset-es2015": "*",
    "babelify": "*",
    "browserify": "*",
    "snazzy": "^6.0.0",
    "standard": "^9.0.2",
    "stylus": "*",
    "stylus-font-face": "*",
    "svg-sprite": "*",
    "uglify-js": "*",
    "watchify": "*",
    "yamlify": "*"
  },
  "dependencies": {
    "brindille-component": "*",
    "brindille-interactive-component": "*",
    "brindille-preloader": "*",
    "brindille-resize": "*",
    "brindille-scroll": "*",
    "brindille-stylus-extends": "*",
    "component-emitter": "^1.2.1",
    "dom-classes": "*",
    "dom-event": "*",
    "emitter-component": "*",
    "gsap": "*",
    "page": "*",
    "stylus-easing": "*",
    "stylus-font-face": "*",
    "stylus-media-queries": "*",
    "stylus-reset": "*",
    "whatwg-fetch": "^2.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/brindille/brindille.git"
  },
  "homepage": "https://github.com/brindille/brindille",
  "bugs": {
    "url": "https://github.com/brindille/brindille/issues"
  }
}
